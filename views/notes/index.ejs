<%- contentFor('body') %>

    <div class="container mt-4">
        <h1 class="mb-4">All Notes</h1>

        <div class="row mb-4">
            <div class="col-md-6">
                <form action="/notes/search" method="GET" class="d-flex">
                    <input type="text" name="query" class="form-control me-2" placeholder="Search notes..."
                        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                    <button type="submit" class="btn btn-outline-primary">Search</button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <a href="/labels" class="btn btn-outline-secondary me-2">
                    Manage Labels
                </a>
                <a href="/notes/new" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New Note
                </a>
            </div>
        </div>

        <% if (availableLabels && availableLabels.length> 0) { %>
            <div class="mb-4">
                <div class="d-flex align-items-center mb-2">
                    <h5 class="m-0 me-2">Filter by label:</h5>
                    <% if (typeof selectedLabel !=='undefined' && selectedLabel) { %>
                        <a href="/notes" class="btn btn-sm btn-outline-secondary ms-2">Clear filter</a>
                        <% } %>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <% availableLabels.forEach(label=> { %>
                        <a href="/notes/label/<%= label.id %>"
                            class="badge rounded-pill text-decoration-none <%= (typeof selectedLabel !== 'undefined' && selectedLabel.id === label.id) ? 'bg-primary' : 'bg-secondary' %>">
                            <%= label.name %>
                        </a>
                        <% }) %>
                </div>
            </div>
            <% } %>

                <% if (typeof searchQuery !=='undefined' && searchQuery) { %>
                    <div class="alert alert-info mb-4">
                        <p class="m-0">
                            Search results for: "<%= searchQuery %>"
                                <a href="/notes" class="ms-2 btn btn-sm btn-outline-secondary">Clear</a>
                        </p>
                    </div>
                    <% } %>

                        <% if (typeof selectedLabel !=='undefined' && selectedLabel) { %>
                            <div class="alert alert-info mb-4">
                                <p class="m-0">
                                    Filtered by label: "<%= selectedLabel.name %>"
                                        <a href="/notes" class="ms-2 btn btn-sm btn-outline-secondary">Clear</a>
                                </p>
                            </div>
                            <% } %>

                                <% if (notes && notes.length> 0) { %>
                                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                                        <% notes.forEach(note=> { %>
                                            <div class="col">
                                                <div class="card h-100 note-card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            <%= note.title %>
                                                        </h5>
                                                        <p class="card-text text-muted">
                                                            <small>Last edited: <%= new
                                                                    Date(note.updatedAt).toLocaleString() %></small>
                                                        </p>
                                                        <% if (note.Labels && note.Labels.length> 0) { %>
                                                            <div class="mb-2">
                                                                <% note.Labels.forEach(label=> { %>
                                                                    <a href="/notes/label/<%= label.id %>"
                                                                        class="badge rounded-pill bg-secondary text-decoration-none me-1">
                                                                        <%= label.name %>
                                                                    </a>
                                                                    <% }) %>
                                                            </div>
                                                            <% } %>
                                                                <p class="card-text">
                                                                    <%= note.content.length> 150 ?
                                                                        note.content.substring(0, 150) + '...' :
                                                                        note.content %>
                                                                </p>
                                                    </div>
                                                    <div class="card-footer bg-transparent">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <a href="/notes/<%= note.id %>"
                                                                    class="btn btn-sm btn-outline-primary me-1">View</a>
                                                                <a href="/notes/<%= note.id %>/export"
                                                                    class="btn btn-sm btn-outline-success">
                                                                    <i class="bi bi-download"></i> Export
                                                                </a>
                                                            </div>
                                                            <div>
                                                                <a href="/notes/<%= note.id %>/edit"
                                                                    class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                                                                <form action="/notes/<%= note.id %>?_method=DELETE"
                                                                    method="POST" class="d-inline">
                                                                    <button type="submit"
                                                                        class="btn btn-sm btn-outline-danger"
                                                                        onclick="return confirm('Are you sure you want to delete this note?')">Delete</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <% } else { %>
                                        <div class="alert alert-info">
                                            <p class="m-0">No notes found. <a href="/notes/new">Add your first note</a>.
                                            </p>
                                        </div>
                                        <% } %>
    </div>