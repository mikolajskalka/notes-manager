<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Edytuj notatkę</h1>
            <div>
                <a href="/notes/<%= note.id %>" class="btn btn-outline-secondary">Anuluj</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form action="/notes/<%= note.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Tytuł</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= note.title %>"
                            required>
                    </div>

                    <div class="mb-3">
                        <label for="content" class="form-label">Treść</label>
                        <textarea class="form-control" id="content" name="content" rows="10" required>
                            <%= note.content.trim() %>
                        </textarea>
                    </div>

                    <div class="mb-3">
                        <label for="labels" class="form-label">Etykiety (oddzielone przecinkami)</label>
                        <input type="text" class="form-control" id="labels" name="labels"
                            value="<%= Array.isArray(note.labels) ? note.labels.join(', ') : '' %>"
                            placeholder="np. praca, ważne, projekt">
                        <small class="form-text text-muted">Dodaj etykiety, aby łatwiej organizować notatki.</small>
                    </div>

                    <div class="mb-3">
                        <label for="attachment" class="form-label">Załącznik (opcjonalnie)</label>
                        <input class="form-control" type="file" id="attachment" name="attachment">
                        <% if (note.attachment) { %>
                            <div class="mt-2">
                                <p class="mb-1">Aktualny załącznik:</p>
                                <a href="<%= note.attachment %>" target="_blank" class="text-decoration-none">
                                    <i class="bi bi-file-earmark"></i> Pokaż załącznik
                                </a>
                                <small class="text-muted d-block mt-1">Przesłanie nowego pliku zastąpi obecny
                                    załącznik</small>
                            </div>
                            <% } %>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>