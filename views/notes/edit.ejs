<%- contentFor('body') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Edit Note</h1>
                    <div>
                        <a href="/notes/<%= note.id %>" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form action="/notes/<%= note.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    value="<%= note.title %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="content" class="form-label">Content</label>
                                <textarea class="form-control" id="content" name="content" rows="10" required>
                                    <%= note.content.trim() %>
                                </textarea>
                            </div>

                            <div class="mb-3">
                                <label for="labelIds" class="form-label">Labels</label>
                                <select class="form-select" id="labelIds" name="labelIds" multiple>
                                    <% if (allLabels && allLabels.length> 0) { %>
                                        <% allLabels.forEach(label=> { %>
                                            <% const isSelected=note.Labels.some(noteLabel=> noteLabel.id === label.id);
                                                %>
                                                <option value="<%= label.id %>" <%=isSelected ? 'selected' : '' %>><%=
                                                        label.name %>
                                                </option>
                                                <% }); %>
                                                    <% } %>
                                </select>
                                <div class="form-text">
                                    Hold Ctrl (or Cmd on Mac) to select multiple labels.
                                    <a href="/labels/new" target="_blank">Create new label</a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="attachment" class="form-label">Attachment (optional)</label>
                                <input class="form-control" type="file" id="attachment" name="attachment">
                                <% if (note.attachment) { %>
                                    <div class="mt-2">
                                        <p class="mb-1">Current attachment:</p>
                                        <a href="<%= note.attachment %>" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-file-earmark"></i> View attachment
                                        </a>
                                        <small class="text-muted d-block mt-1">Uploading a new file will replace the
                                            current attachment</small>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>