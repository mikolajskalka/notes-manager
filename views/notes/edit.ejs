<%- contentFor('body') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Edit Note</h1>
                    <div>
                        <a href="<%= basePath %>/notes" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form action="<%= basePath %>/notes/<%= note.id %>?_method=PUT" method="POST"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    value="<%= note.title %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="content" class="form-label">Content</label>
                                <textarea class="form-control" id="content" name="content" rows="10" required>
                                    <%= note.content.trim() %>
                                </textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Labels</label>
                                <div class="d-flex flex-wrap gap-2 mb-2" id="label-buttons">
                                    <% if (allLabels && allLabels.length> 0) { %>
                                        <% allLabels.forEach(label=> { %>
                                            <% const isSelected=note.Labels.some(noteLabel=> noteLabel.id === label.id);
                                                %>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input visually-hidden" type="checkbox"
                                                        id="label-<%= label.id %>" name="labelIds"
                                                        value="<%= label.id %>" <%=isSelected ? 'checked' : '' %>>
                                                    <label class="btn badge rounded-pill px-3 py-2 label-selector"
                                                        for="label-<%= label.id %>"
                                                        style="background-color: <%= label.color %>; cursor: pointer; 
                                                              opacity: <%= isSelected ? '1' : '0.7' %>; 
                                                              border: <%= isSelected ? '2px solid #000' : '2px solid transparent' %>;">
                                                        <%= label.name %>
                                                    </label>
                                                </div>
                                                <% }); %>
                                                    <% } else { %>
                                                        <p class="text-muted">No labels available.</p>
                                                        <% } %>
                                </div>
                                <div class="form-text">
                                    Click on labels to select/deselect them.
                                    <a href="/labels/new" target="_blank">Create new label</a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="attachment" class="form-label">Attachment (optional)</label>
                                <input class="form-control" type="file" id="attachment" name="attachment">
                                <% if (note.attachment) { %>
                                    <div class="mt-2">
                                        <p class="mb-1">Current attachment:</p>
                                        <a href="<%= note.attachment %>" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-file-earmark"></i> View attachment
                                        </a>
                                        <small class="text-muted d-block mt-1">Uploading a new file will replace the
                                            current attachment</small>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const labelButtons = document.querySelectorAll('.label-selector');

            labelButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const checkbox = document.getElementById(this.getAttribute('for'));
                    // Toggle selected state visually
                    if (checkbox.checked) {
                        this.style.opacity = '0.7';
                        this.style.border = '2px solid transparent';
                    } else {
                        this.style.opacity = '1';
                        this.style.border = '2px solid #000';
                    }
                });
            });
        });
    </script>