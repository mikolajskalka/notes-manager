<%- contentFor('body') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Edytuj notatkę</h1>
                    <div>
                        <a href="<%= createUrl('/notes') %>" class="btn btn-outline-secondary">Anuluj</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form action="<%= createUrl('/notes/' + note.id) %>?_method=PUT" method="POST"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Tytuł</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    value="<%= note.title %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="content" class="form-label">Treść</label>
                                <textarea class="form-control" id="content" name="content" rows="10" required>
                                    <%= note.content || '' %>
                                </textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Etykiety</label>
                                <div class="d-flex flex-wrap gap-2 mb-2" id="label-buttons">
                                    <% if (allLabels && allLabels.length> 0) { %>
                                        <% allLabels.forEach(label=> { %>
                                            <% const isSelected=note.Labels.some(noteLabel=> noteLabel.id === label.id);
                                                %>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input visually-hidden" type="checkbox"
                                                        id="label-<%= label.id %>" name="labelIds"
                                                        value="<%= label.id %>" <%=isSelected ? 'checked' : '' %>>
                                                    <label class="btn badge rounded-pill px-3 py-2 label-selector"
                                                        for="label-<%= label.id %>"
                                                        style="background-color: <%= label.color %>; cursor: pointer; 
                                                              opacity: <%= isSelected ? '1' : '0.7' %>; 
                                                              border: <%= isSelected ? '2px solid #000' : '2px solid transparent' %>;">
                                                        <%= label.name %>
                                                    </label>
                                                </div>
                                                <% }); %>
                                                    <% } else { %>
                                                        <p class="text-muted">Brak dostępnych etykiet.</p>
                                                        <% } %>
                                </div>
                                <div class="form-text">
                                    Kliknij na etykiety, aby je wybrać/odznaczyć.
                                    <a href="<%= createUrl('/labels/new') %>" target="_blank">Utwórz nową etykietę</a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="attachment" class="form-label">Załącznik (opcjonalnie)</label>
                                <div class="custom-file-upload">
                                    <input class="form-control" type="file" id="attachment" name="attachment"
                                        style="display: none;">
                                    <button type="button" class="btn btn-outline-secondary"
                                        onclick="document.getElementById('attachment').click();">
                                        <i class="bi bi-paperclip"></i> Wybierz plik
                                    </button>
                                    <span id="file-name" class="ms-2 text-muted"></span>
                                </div>
                                <% if (note.attachment) { %>
                                    <div class="mt-2">
                                        <p class="mb-1">Aktualny załącznik:</p>
                                        <a href="<%= createUrl(note.attachment) %>" target="_blank"
                                            class="text-decoration-none">
                                            <i class="bi bi-file-earmark"></i> Zobacz załącznik
                                        </a>
                                        <small class="text-muted d-block mt-1">Przesłanie nowego pliku zastąpi aktualny
                                            załącznik</small>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const labelButtons = document.querySelectorAll('.label-selector');
            const fileInput = document.getElementById('attachment');
            const fileNameSpan = document.getElementById('file-name');

            labelButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const checkbox = document.getElementById(this.getAttribute('for'));
                    // Toggle selected state visually
                    if (checkbox.checked) {
                        this.style.opacity = '0.7';
                        this.style.border = '2px solid transparent';
                    } else {
                        this.style.opacity = '1';
                        this.style.border = '2px solid #000';
                    }
                });
            });

            // Handle file selection
            fileInput.addEventListener('change', function () {
                if (this.files && this.files.length > 0) {
                    fileNameSpan.textContent = this.files[0].name;
                    fileNameSpan.className = 'ms-2 text-success';
                } else {
                    fileNameSpan.textContent = '';
                    fileNameSpan.className = 'ms-2 text-muted';
                }
            });
        });
    </script>