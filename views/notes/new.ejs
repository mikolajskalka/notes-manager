<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Dodaj nową notatkę</h1>
            <a href="/notes" class="btn btn-outline-secondary">Wróć do listy</a>
        </div>

        <div class="card">
            <div class="card-body">
                <form action="/notes" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Tytuł</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>

                    <div class="mb-3">
                        <label for="content" class="form-label">Treść</label>
                        <textarea class="form-control" id="content" name="content" rows="10" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="labels" class="form-label">Etykiety (oddzielone przecinkami)</label>
                        <input type="text" class="form-control" id="labels" name="labels"
                            placeholder="np. praca, ważne, projekt">
                        <small class="form-text text-muted">Dodaj etykiety, aby łatwiej organizować notatki.</small>
                    </div>

                    <div class="mb-3">
                        <label for="attachment" class="form-label">Załącznik (opcjonalnie)</label>
                        <input class="form-control" type="file" id="attachment" name="attachment">
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Zapisz notatkę</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>