<%- contentFor('body') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Zarządzaj etykietami</h1>
            <a href="/labels/new" class="btn btn-primary">Utwórz nową etykietę</a>
        </div>

        <% if (labels && labels.length> 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nazwa</th>
                            <th>Kolor</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% labels.forEach(label=> { %>
                            <tr>
                                <td>
                                    <span class="badge" style="background-color: <%= label.color %>;">
                                        <%= label.name %>
                                    </span>
                                </td>
                                <td>
                                    <div
                                        style="width: 30px; height: 30px; background-color: <%= label.color %>; border-radius: 4px; border: 1px solid #ddd;">
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/labels/<%= label.id %>/notes"
                                            class="btn btn-sm btn-outline-primary">Zobacz notatki</a>
                                        <a href="/labels/<%= label.id %>/edit"
                                            class="btn btn-sm btn-outline-secondary">Edytuj</a>
                                        <form action="/labels/<%= label.id %>?_method=DELETE" method="POST"
                                            class="d-inline"
                                            onsubmit="return confirm('Czy na pewno chcesz usunąć tę etykietę? Usunięcie spowoduje usunięcie etykiety ze wszystkich notatek, ale nie usunie samych notatek.')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Usuń</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="alert alert-info">
                    <p>Nie znaleziono etykiet. <a href="/labels/new">Utwórz pierwszą etykietę</a>.</p>
                </div>
                <% } %>

                    <div class="mt-4">
                        <a href="/notes" class="btn btn-outline-secondary">Wróć do notatek</a>
                    </div>
    </div>