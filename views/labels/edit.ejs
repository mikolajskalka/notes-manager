<%- contentFor('body') %>

    <div class="container mt-4">
        <h1>Edit Label</h1>

        <form action="/labels/<%= label.id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Label Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= label.name %>" required>
                <div class="form-text">Label names must be unique</div>
            </div>

            <div class="mb-3">
                <label for="color" class="form-label">Label Color</label>
                <input type="color" class="form-control form-control-color" id="color" name="color"
                    value="<%= label.color || '#6c757d' %>" title="Choose a color for the label">
                <div class="form-text">Select a color to visually identify this label</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update Label</button>
                <a href="/labels" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>