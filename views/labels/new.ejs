<%- contentFor('body') %>

    <div class="container mt-4">
        <h1>Stwórz nową etykietę</h1>

        <form action="<%= createUrl('/labels') %>" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Nazwa etykiety</label>
                <input type="text" class="form-control" id="name" name="name" required>
                <div class="form-text">Nazwy etykiet muszą być unikalne</div>
            </div>

            <div class="mb-3">
                <label for="color" class="form-label">Kolor etykiety</label>
                <input type="color" class="form-control form-control-color" id="color" name="color" value="#6c757d"
                    title="Wybierz kolor dla etykiety">
                <div class="form-text">Wybierz kolor, aby wizualnie zidentyfikować tę etykietę</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Utwórz etykietę</button>
                <a href="<%= createUrl('/labels') %>" class="btn btn-outline-secondary">Anuluj</a>
            </div>
        </form>
    </div>